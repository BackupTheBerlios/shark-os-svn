. config

rm -rf $WORKINGDIR
mkdir -p $WORKINGDIR
cd $WORKINGDIR

apt-get source gnome-panel$VERSION
apt-get --yes build-dep gnome-panel$VERSION
cd gnome-panel-*

sed -i "s/firefox/epiphany/" debian/patches/04_default_panel_config.patch

echo | dch -D $RELEASE -v $(sed  -n '1s#^.*(\(.*\)).*#\1'${DISTRONAME_L}${GNOME_PANEL_VERSION}'#p' debian/changelog)  "Replaced firefox with epiphany"

dpkg-buildpackage $DPKGOPTS
